<%unless flash[:notice].nil? %>
  <%= flash[:notice] %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-5 col-xs-offset-4 sign_up">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Log in</h3>
        </div>
        <div class="panel-body">

          <%= form_tag session_path, html: {class: "form"} do %>
            <div class="form-group">
              <%= label_tag :email %>
              <%= text_field_tag :email, params[:email] %>
            </div>
            <div class="form-group">
              <%= label_tag :password %>
              <%= password_field_tag :password %>
            </div>

            <%= submit_tag "Log In", class: "btn btn-default" %>

          <% end %>
          <p>or</p>
          <div class="form-group">
          <%= link_to "Sign in With Google", '/auth/google_oauth2', class: "btn btn-default" %>
        </div>

        <div class="form-group">
          <%= link_to "Sign Up", sign_up_path%>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
