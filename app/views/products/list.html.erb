<div class="container-fluid">
  <div class="row">
    <div id="enterItems">
      <div class="col-xs-10 col-md-7 col-xs-offset-1 col-md-offset-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1 class="panel-title">Enter your items</h1>
          </div>
          <div class="panel-body">

            <%= form_for @product, url: list_path, method: :post do %>
              <div id="listForm">
                <div class="form-group">
                  <label class="labelItem" for="product_name0">Name</label>

                  <input type="text" data-autocomplete="<%=autocomplete_path%>" data-update-elements="{}" name="products[][name]" class="inputItem" id="product_name0" required="required">

                </div>
              </div>
                <input type="button" name="add_another" id="addAnother" value="Add another item">
                <input type="submit" name="commit" id="importItems" value="Import items" data-toggle="modal" data-target="#aboutModal">

            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>















