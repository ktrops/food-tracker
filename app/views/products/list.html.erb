<div class="container-fluid">
  <div class="row">
    <div id="enterItems">
      <div class="col-xs-9 col-md-6 col-xs-offset-1 col-md-offset-3">
        <h1> Enter your items</h1>

        <%= form_for @product, url: product_check_path, method: :post do %>
          <div id="listForm">
            <div class="form-group">
              <label class="labelItem" for="product_name0">Name</label>
              <input type="text" name="products[][name]" class="inputItem" id="product_name0">
            </div>
          </div>
            <input type="button" name="add_another" id="addAnother" value="Add another item">
            <input type="submit" name="commit" id="importItems" value="Import items" data-toggle="modal" data-target="#aboutModal">

        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
 <div class="modal fade" id="aboutModal" role="dialog">
   <div class="modal-dialog">

     <!-- Modal content-->
     <div class="modal-content">
       <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal">x</button>
         <h4 class="modal-title">Choose a Product</h4>
       </div>
       <div class="modal-body">
       <%= form_for :product do |f| %>
       <% num = 0%>
         <% @user_products.each do |user_product|%>
            <% num += 1 %>
            <label class="labelItem" for="product_name<%=num%>"><%=user_product.name%></label>
            <input type="radio" name="products[][name]" class="inputItem" id="product_name#{num}"> %>
         <% end %>
         <%= f.submit %>
        <% end %>
       </div>
     </div>
   </div>
 </div>














